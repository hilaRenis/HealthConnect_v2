{
  "dashboard": {
    "title": "HealthConnect - System Health",
    "tags": ["healthconnect", "system", "overview"],
    "timezone": "browser",
    "refresh": "10s",
    "editable": true,
    "panels": [
      {
        "id": 1,
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
        "type": "stat",
        "title": "Total Services Running",
        "targets": [
          {
            "expr": "count(up{job=~\".*-service\"} == 1)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "red" },
                { "value": 5, "color": "yellow" },
                { "value": 7, "color": "green" }
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 },
        "type": "stat",
        "title": "Total Requests (Last 5m)",
        "targets": [
          {
            "expr": "sum(increase(http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 },
        "type": "stat",
        "title": "Error Rate (%)",
        "targets": [
          {
            "expr": "100 * sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 5, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
        "type": "timeseries",
        "title": "Request Rate by Service (req/sec)",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[1m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["mean", "max"]
          }
        }
      },
      {
        "id": 5,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
        "type": "timeseries",
        "title": "Response Time - 95th Percentile (seconds)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, service))",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 0.5, "color": "yellow" },
                { "value": 1, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
        "type": "timeseries",
        "title": "Memory Usage by Service (MB)",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=~\".*-service\"} / 1024 / 1024",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decmbytes",
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 20
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 14 },
        "type": "timeseries",
        "title": "CPU Usage by Service (%)",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=~\".*-service\"}[5m]) * 100",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "drawStyle": "line"
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 22 },
        "type": "table",
        "title": "Service Status Overview",
        "targets": [
          {
            "expr": "up{job=~\".*-service\"}",
            "refId": "A",
            "format": "table",
            "instant": true
          },
          {
            "expr": "sum(rate(http_requests_total[5m])) by (service)",
            "refId": "B",
            "format": "table",
            "instant": true
          },
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "refId": "C",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "merge"
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Value #A" },
              "properties": [
                { "id": "displayName", "value": "Status" },
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "mappings",
                  "value": [
                    { "type": "value", "value": "1", "text": "UP" },
                    { "type": "value", "value": "0", "text": "DOWN" }
                  ]
                }
              ]
            }
          ]
        }
      }
    ],
    "schemaVersion": 30,
    "version": 1
  }
}
